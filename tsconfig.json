{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@synapse/types": ["./shared/types/src/index.ts"],
      "@synapse/utils": ["./shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist", "build", ".next"]
}